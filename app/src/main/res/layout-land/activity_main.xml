<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:background="@drawable/border"
                    android:layout_weight="0"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="250dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="200dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="25dp"
                                android:layout_marginTop="10dp"
                                app:srcCompat="@drawable/logo_quebec" />

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="210dp"
                                android:layout_height="210dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                app:srcCompat="@drawable/bigsmoke" />

                            <ImageView
                                android:id="@+id/imageViewSignature"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/bigsmoke_signature" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                tools:ignore="UselessParent">

                                <TextView
                                    android:id="@+id/textView2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="bottom|left"
                                    android:text="@string/permis"
                                    android:textSize="30dp"
                                    android:textStyle="bold|italic" />
                            </TableRow>

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/numero_permis"
                                android:textColor="@color/black"
                                android:textSize="50dp"
                                android:textStyle="bold" />

                            <TableLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:id="@+id/textViewwNom"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0"
                                        android:text="@string/nom"
                                        android:textAllCaps="true"
                                        android:textColor="@color/black"
                                        android:textSize="25dp"
                                        android:textStyle="bold" />
                                </TableRow>

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:id="@+id/textViewPrenom"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0"
                                        android:text="@string/prenom"
                                        android:textAllCaps="true"
                                        android:textColor="@color/black"
                                        android:textSize="25dp"
                                        android:textStyle="bold" />
                                </TableRow>

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:id="@+id/textView6"
                                        android:layout_width="180dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0"
                                        android:maxWidth="180dp"
                                        android:text="@string/dateN"
                                        android:textColor="@color/blue" />

                                    <TextView
                                        android:id="@+id/textView7"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="@string/dateN2"
                                        android:textAllCaps="true"
                                        android:textColor="@color/black"
                                        android:textStyle="bold" />
                                </TableRow>

                            </TableLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/textView8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:text="@string/adresse"
                                    android:textAllCaps="true"
                                    android:textColor="@color/black"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/textView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:layout_alignBottom="@+id/textView8"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginStart="299dp"
                                    android:layout_marginTop="52dp"
                                    android:layout_marginEnd="146dp"
                                    android:layout_marginBottom="2dp"
                                    android:text="@string/sexe"
                                    android:textColor="@color/blue" />

                                <TextView
                                    android:id="@+id/textViewSexeP"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:layout_alignStart="@+id/textView"
                                    android:layout_alignTop="@+id/textView"
                                    android:layout_alignEnd="@+id/textView"
                                    android:layout_alignBottom="@+id/textView"
                                    android:layout_marginStart="38dp"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginEnd="-10dp"
                                    android:layout_marginBottom="1dp"
                                    android:text="@string/sexe2"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />


                            </RelativeLayout>

                            <TableLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:id="@+id/textView10"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0"
                                        android:text="@string/classe"
                                        android:textColor="@color/blue" />

                                    <TextView
                                        android:id="@+id/textView11"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="2dp"
                                        android:layout_weight="1"
                                        android:text="@string/classe2"
                                        android:textColor="@color/black"
                                        android:textStyle="bold" />
                                </TableRow>

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:id="@+id/textView12"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/dateV"
                                        android:textColor="@color/blue" />

                                    <TextView
                                        android:id="@+id/textView13"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="2dp"
                                        android:text="@string/datev2"
                                        android:textColor="@color/black"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/textView14"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/dateE"
                                        android:textColor="@color/blue" />

                                    <TextView
                                        android:id="@+id/textView15"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="2dp"
                                        android:text="@string/dateE2"
                                        android:textColor="@color/black"
                                        android:textStyle="bold" />
                                </TableRow>

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                            </TableLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_weight="0"
                    android:background="@drawable/border"
                    android:orientation="vertical">


                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView
                            android:id="@+id/textView31"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:text="@string/champNom"
                            android:textColor="@color/blue"
                            android:textSize="30dp" />

                        <EditText
                            android:id="@+id/editTextNom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"

                            android:inputType="textPersonName"
                            android:hint="Nom"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView
                            android:id="@+id/textView32"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:text="@string/champPrenom"
                            android:textColor="@color/blue"
                            android:textSize="30dp" />

                        <EditText
                            android:id="@+id/editTextPrenom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"

                            android:inputType="textPersonName"
                            android:hint="Prénom"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="40dp">


                        <TextView
                            android:id="@+id/textViewH"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:text="@string/homme"
                            android:textColor="@color/blue"
                            android:textSize="30dp" />

                        <Switch
                            android:id="@+id/switchSexe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0" />

                        <TextView
                            android:id="@+id/textViewFemme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text="@string/femme"
                            android:textColor="@color/blue"
                            android:textSize="30dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="40dp">


                        <TextView
                            android:id="@+id/textViewSignature"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:text="@string/signature"
                            android:textColor="@color/blue"
                            android:textSize="30dp" />

                        <CheckBox
                            android:id="@+id/checkBoxSignature"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:checked="true"
                            />

                    </TableRow>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>